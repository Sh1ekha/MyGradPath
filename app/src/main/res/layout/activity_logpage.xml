<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogPage"
    android:padding="20dp"
    android:background="@drawable/backg1">


    <ImageView
        android:id="@+id/miniLo"
        android:layout_width="265dp"
        android:layout_height="283dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/minilo" />

    <TextView
        android:id="@+id/wonderful"
        android:layout_width="364dp"
        android:layout_height="60dp"
        android:layout_below="@id/miniLo"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="73dp"
        android:fontFamily="casual"
        android:text="@string/welcome_wonderful_student"
        android:textColor="#100E0E"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/skp"
        android:layout_marginBottom="19dp"
        android:background="#00BDE4"
        android:text="Login"

     />
    <Button
        android:id="@+id/skp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00BDE4"

        android:text="Continue without Login" />


</RelativeLayout>